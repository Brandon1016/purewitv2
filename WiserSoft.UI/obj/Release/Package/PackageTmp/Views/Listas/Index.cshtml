@model IEnumerable<WiserSoft.UI.Models.Listas>
@{
    ViewBag.Title = "Listas";
    Layout = "~/Views/Shared/Master.cshtml";
}
    <div class="col-lg-12">
        <div class="card card-outline-primary">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Listas</h4>
            </div>
            <div class="card-body">
                <br />
                <div class="pull-right">
                    <button type="submit" class="btn btn-success" title="Añadir nueva Lista" onclick="location.href='@Url.Action("Create", "Listas")'"><i class="fa fa-plus m-l-10"></i></button>
                </div>
                    <div class="table-responsive">
                        <table id="myTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>
                                        <td>
                                            <a title="Editar lista" href="@Url.Action("Edit", "Listas",new { Id_Lista = item.Id_Lista })" class="btn btn-success"><i class="fa fa-edit"></i></a> |
                                            <a title="Agregar contactos a la lista" href="@Url.Action("Contactos", "Listas",new { Id_Lista = item.Id_Lista })" class="btn btn-success"><i class="fa fa-group"></i></a> |
                                            <a title="Eliminar lista" href="@Url.Action("Delete", "Listas",new { Id_Lista = item.Id_Lista })" class="btn btn-danger"><i class="fa fa-trash"></i></a> 
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br /><br />
                    </div>
            </div>
        </div>
    </div>




