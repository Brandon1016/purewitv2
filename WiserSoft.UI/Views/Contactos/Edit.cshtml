@model WiserSoft.UI.Models.Contactos

@{
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <div class="card card-outline-primary">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Edición de listas</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-body">
                    <hr>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Numero, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ej: 88888888" } })
                            @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                            @Html.ValidationMessage("errornumero", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ej: Maria" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Detalle, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Detalle, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ej: Trabajo" } })
                            @Html.ValidationMessageFor(model => model.Detalle, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ej: ejemplo@gmail.com" } })
                            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-actions text-center">
                        <button title="Guardar Cambios" type="submit" class="btn btn-success"> <i class="fa fa-save m-l-10"></i> Guardar</button>
                        <a title="Regresar a lista de Contactos"  href="@Url.Action("Index", "Contactos")" class="btn btn-inverse">Cancelar</a>
                    </div>
                    <div style="text-align:center">
                        @Html.ValidationMessage("error", new { @class = "text-danger" })
                    </div>

                    @*<div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-default" />
                        </div>
                    </div>*@
                </div>
                }

                @*<div>
                    @Html.ActionLink("Regresar", "Index")
                </div>*@
            </div>
        </div>
    </div>


</div>
