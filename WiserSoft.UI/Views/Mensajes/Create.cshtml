
@model WiserSoft.UI.Models.Mensajes
@{
    ViewBag.Title = "Nuevo Mensaje";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <div class="card card-outline-primary">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Creación de mensajes</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-body">
                        <hr>
                        <div class="row p-t-20">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">Mensaje</label><br>
                                    @Html.TextAreaFor(model => model.Cuerpo_Mensaje, 10,64, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Cuerpo_Mensaje, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">Tipo de mensaje:</label>
                                    @Html.DropDownListFor(model => model.Id_Tipo, new SelectList(ViewBag.ListasTipoMensaje, "Value", "Text"), "Seleccione un tipo de mensaje:", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Id_Tipo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="form-actions text-center">
                        <button type="submit" class="btn btn-success"> <i class="fa fa-save m-l-10"></i> Guardar</button>
                        <a href="@Url.Action("Index")" class="btn btn-inverse">Cancelar</a>
                    </div>
                    <div style="text-align:center">
                        @Html.ValidationMessage("error", new { @class = "text-danger" })
                    </div>                    
                }
            </div>
        </div>
    </div>
</div>