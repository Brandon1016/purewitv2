@model WiserSoft.UI.Models.Listas

@{
    ViewBag.Title = "Edición de listas";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <div class="card card-outline-primary">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Edición de listas</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-body">
                        <hr>
                        <div class="row p-t-20">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">Nombre de lista</label>
                                    @Html.TextBoxFor(model => model.Nombre, new { @placeholder = "Ejm: Lista 1", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">Descripción</label>
                                    @Html.TextBoxFor(model => model.Descripcion, new { @placeholder = "Ejm: Mora Alta", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="form-actions text-center">
                        <button type="submit" class="btn btn-success"> <i class="fa fa-save m-l-10"></i> Guardar</button>
                        <a href="@Url.Action("Index", "Listas")" class="btn btn-inverse">Cancelar</a>
                    </div>
                    <div style="text-align:center">
                        @Html.ValidationMessage("error", new { @class = "text-danger" })
                    </div>
                }
            </div>
        </div>
    </div>


</div>



